<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/check_box_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_check_box_outline_blank_black_24dp"
                android:layout_margin="16dp"/>

        <TextView
                android:id="@+id/topic_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_centerVertical="true"
                android:text="Title"
                android:textSize="18sp"
                android:textColor="@color/ic_launcher_background"
                android:layout_toEndOf="@id/check_box_iv"/>

        <TextView
                android:id="@+id/time_to_end_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/topic_tv"
                android:layout_marginEnd="16dp"
                android:text="time"
                android:textSize="14sp"
                android:textColor="@color/colorGray"/>

    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

</LinearLayout>